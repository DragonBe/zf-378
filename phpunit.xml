<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php" colors="true">

    <testsuite name="ZF-378 Unit Test cases">
        <directory>./tests</directory>
    </testsuite>

    <logging>
        <log type="coverage-html" target="build/coverage" charset="UTF-8"
